{
  "name": "leather-ext",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/leather-ext/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/leather-ext/src/main.tsx",
        "outputPath": "dist/apps/leather-ext",
        "outputFileName": "main.js",
        "tsConfig": "apps/leather-ext/tsconfig.app.json",
        "assets": [],
        "platform": "node"
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "executor": "@nx/esbuild:esbuild",
      "defaultConfiguration": "development",
      "tsConfig": "apps/leather-ext/tsconfig.app.json",
      "options": {
        "buildTarget": "leather-ext:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "leather-ext:build:development"
        },
        "production": {
          "buildTarget": "leather-ext:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/leather-ext/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/leather-ext/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
